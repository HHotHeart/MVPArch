<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_test_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="TestMvpActivity"
        android:textColor="@color/white"
        app:rv_backgroundColor="@color/blue" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_test_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="TestHostActivity"
        android:textColor="@color/white"
        app:rv_backgroundColor="@color/blue" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_test_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="TestNormalActivity"
        android:textColor="@color/white"
        app:rv_backgroundColor="@color/blue" />
</LinearLayout>